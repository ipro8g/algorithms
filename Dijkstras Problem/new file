function simulate(cities, start, end){

    let end_flag = false;
    let path = [];
    let walked = 0;
    
    const option = random_int(0,cities[start].connected.length-1);
    
    path.push(option);
    walked += cities[start].connected[option].distance;
    
    while(!end_flag){
        
        const option2 = random_int(0,cities[cities[start].connected[option]].connected.length-1);
        
        if(path.includes(option2)){
        
            continue;
        }
        
        path.push(option2);
        walked += cities[cities[start].connected[option]].connected[option2].distance;
        
        if(path.length === 5 || cities[cities[start].connected[option]].connected[option2] === end){
        
            break;
        }
    }
    
    
    
    const ob = {
        "path":path,
        "walked":walked
    }
    
    return ob;
}

function visit(city, path){

    let walked = 0;
}

function random_int(min, max) {

    let floor = Math.ceil(min);
    let coil = Math.floor(max);
    return Math.floor(Math.random() * (max - min + 1)) + min;
}
